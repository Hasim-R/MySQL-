mysql> SELECT
    ->     CASE
    ->         WHEN assigned_team LIKE '%Software%' THEN 'Software'
    ->         WHEN assigned_team LIKE '%Hardware%' THEN 'Hardware'
    ->         WHEN assigned_team LIKE '%Network%' THEN 'Network'
    ->         ELSE 'Other'
    ->     END AS team_type,
    ->     COUNT(*) AS ticket_count
    -> FROM tickets
    -> GROUP BY team_type;
