mysql> SELECT *,
    ->     CASE
    ->         WHEN priority = 3 THEN 'High Risk'
    ->         WHEN priority = 2 THEN 'Normal'
    ->         ELSE 'Low Risk'
    ->     END AS risk_label
    -> FROM tickets
    -> WHERE issue_type LIKE '%software%';
