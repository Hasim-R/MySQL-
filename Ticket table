mysql> SELECT *,
    ->     CASE
    ->         WHEN issue_type LIKE '%software%' THEN 'Software Issue'
    ->         WHEN issue_type LIKE '%hardware%' THEN 'Hardware Issue'
    ->         WHEN issue_type LIKE '%network%' THEN 'Network Issue'
    ->         ELSE 'Other'
    ->     END AS issue_category
    -> FROM tickets;
