mysql> SELECT *,
    ->     CASE priority
    ->         WHEN 3 THEN 'High'
    ->         WHEN 2 THEN 'Medium'
    ->         WHEN 1 THEN 'Low'
    ->         ELSE 'Unknown'
    ->     END AS urgency
    -> FROM tickets;
